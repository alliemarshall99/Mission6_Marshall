@{
    ViewData["Title"] = "Add Film";
}

@model Film

<!DOCTYPE html>
<html>
<head>
    <title>Add Movie</title>
</head>
<body>

 

    <h1>Add a New Movie</h1>

    <form asp-controller="Home" asp-action="AddFilm" method="post">
        @Html.AntiForgeryToken()

        <label for="Title">Title:</label>
        <input type="text" name="Title" required />

        <label for="Genre">Genre:</label>
        <select name="Genre" id="Genre">
            <option value="Miscellaneous">Miscellaneous</option>
            <option value="Drama">Drama</option>
            <option value="Television">Television</option>
            <option value="Horror/Suspense">Horror/Suspense</option>
            <option value="Comedy">Comedy</option>
            <option value="Action/Adventure">Action/Adventure</option>
            <option value="Family">Family</option>
            <option value="VHS">VHS</option>
        </select>
        
        <label for="Director">Director:</label>
        <input type="text" name="Director" required/>


        <label for="Year">Year:</label>
        <input type="text" name="Year" required/>

        

        <label for="Rating">Rating:</label>
        <select name="Rating">
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select>

        <label for="Edited">Edited:</label>
        <input type="checkbox" name="Edited" />

        <label for="LentTo">Lent To:</label>
        <input type="text" name="LentTo" />

        <label for="Notes">Notes:</label>
        <input type="text" name="Notes" maxlength="25" />

        <button type="submit">Submit</button>
    </form>
</body>
</html>
