@model Film

@{
    ViewData["Title"] = "Delete Movie";
}

<h1>Delete Movie</h1>

<p>Are you sure you want to delete the movie: <strong>@Model.Title</strong>?</p>

<form asp-action="DeleteConfirmed" asp-route-id="@Model.MovieId" method="post">
    @Html.AntiForgeryToken()

    <button type="submit">Delete</button>
    <a asp-action="Index">Cancel</a>
</form>
